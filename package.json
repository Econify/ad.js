{
  "name": "adjs",
  "version": "2.0.0-beta.2",
  "description": "Ad Library to simplify and optimize integration with ad networks such as DFP",
  "main": "./index.js",
  "types": "./types.d.ts",
  "scripts": {
    "build": "npm run build:client && npm run build:nodejs",
    "build:client": "webpack",
    "build:nodejs": "tsc --pretty -p .",
    "clean": "rm -rf ./umd && rm -rf ./build",
    "docs": "docsify serve docs",
    "lint": "tslint -c tslint.json --fix 'src/**/*.ts'",
    "lint:no-fix": "tslint -c tslint.json 'src/**/*.ts'",
    "release": "npm run clean && npm run build; cp ./package.json dist; cp ./README.md dist; cp -R umd dist; cd dist; npm publish",
    "start": "concurrently -k \"webpack-dev-server --port 8081\" \"http-server ./demo -p 8080\"",
    "test": "NODE_PATH=./src jest --coverage ./tests --no-cache",
    "ts": "tsc --pretty"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/econify/ad.js.git"
  },
  "author": "Stephen Baldwin <s@econify.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/econify/ad.js/issues"
  },
  "homepage": "https://github.com/econify/ad.js#readme",
  "dependencies": {
    "scrollmonitor": "^1.2.4",
    "stickybits": "^3.6.4"
  },
  "devDependencies": {
    "@types/jest": "^23.3.0",
    "concurrently": "^3.6.0",
    "docsify": "^4.9.4",
    "docsify-cli": "^4.3.0",
    "http-server": "^0.11.1",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.4.1",
    "source-map-loader": "^0.2.3",
    "terser-webpack-plugin": "^1.2.3",
    "ts-jest": "^23.0.1",
    "ts-loader": "^4.4.2",
    "tslint": "^5.11.0",
    "typescript": "^3.4.5",
    "unminified-webpack-plugin": "^2.0.0",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.3.1"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:no-fix && npm test"
    }
  }
}
