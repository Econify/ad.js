{
  "name": "ippyrus",
  "version": "0.0.1",
  "description": "Ad Library that allows configuration with multiple providers",
  "main": "index.js",
  "scripts": {
    "start": "concurrently -k \"webpack-dev-server --port 8080\" \"http-server ./demo -p 8081\"",
    "build": "webpack",
    "lint": "tslint -c tslint.json --fix 'src/**/*.ts'",
    "lint:no-fix": "tslint -c tslint.json 'src/**/*.ts'",
    "test": "NODE_PATH=./src jest ./tests --no-cache",
    "ts": "tsc --pretty"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/econify/ippyrus.git"
  },
  "author": "Stephen Baldwin <s@econify.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/econify/ippyrus/issues"
  },
  "homepage": "https://github.com/econify/ippyrus#readme",
  "dependencies": {
    "@types/doubleclick-gpt": "^238.0.1",
    "scrollmonitor": "^1.2.4"
  },
  "devDependencies": {
    "@types/jest": "^23.3.0",
    "concurrently": "^3.6.0",
    "http-server": "^0.11.1",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.4.1",
    "source-map-loader": "^0.2.3",
    "ts-jest": "^23.0.1",
    "ts-loader": "^4.4.2",
    "tslint": "^5.11.0",
    "typescript": "^3.0.0-dev.20180712",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.4"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:no-fix && npm test"
    }
  }
}
